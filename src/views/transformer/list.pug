html
  head
    title Trafo stanice
    link(rel="stylesheet" href="http://www.w3schools.com/lib/w3.css")
  body
    div(class="w3-row")
      div(class="w3-col l2") &nbsp
      div(class="w3-col l8")
        table(class="w3-table-all w3-hoverable")
          thead
            tr(class="w3-brown")
              th ID
              th Lokacija
              th Opis
              th Omogućeno nadgledanje
              th
              th
          - for (var i = 0; i < transformers.length; i++) {
          - var allowMonitoring = (transformers[i].MONITORING?  "Da": "Ne");
          tr
            td= transformers[i].ID
            td= transformers[i].ADDRESS
            td= transformers[i].DESCRIPTION
            td= allowMonitoring
            td
              a(class="w3-text-blue" href="/director/transformer/edit/" + transformers[i].ID) Izmeni
            td
              a(class="w3-text-blue" href="/director/transformer/delete/" + transformers[i].ID) Izbriši
          - }
        a(class="w3-text-blue w3-left" href="/") Nazad
      div(class="w3-col l2") &nbsp